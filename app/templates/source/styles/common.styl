*,
*:before,
*:after
	box-sizing border-box
	-webkit-text-size-adjust 100%
	-moz-text-size-adjust 100%
	-ms-text-size-adjust 100%
	text-size-adjust 100%

html, body
	height 100%

body, button
	font-family sans-serif
	font-weight 400
	font-size 16px
	color #333333

#app
	display flex
	align-items center
	justify-content center
	min-height 100%
	position relative

#app .layouts
	flex auto

[hidden]
	display none !important
